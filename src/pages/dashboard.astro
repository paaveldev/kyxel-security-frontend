---
import BaseLayout from '../layouts/BaseLayout.astro';
import { apiGetOverview, apiGetEvents } from '../lib/api';

const baseUrl = import.meta.env.BASE_URL;

// Datos de demo por defecto
const defaultStats = [
  { label: 'Attacks (24h)', value: '1,342', change: '+12%' },
  { label: 'Unique IPs', value: '724', change: '-4%' },
  { label: 'Active sensors', value: '58', change: '+3 new' },
  { label: 'Automation coverage', value: '82%', change: '+6%' },
];

const defaultAttacks = [
  { time: '11:02', ip: '203.0.113.12', country: 'DE', type: 'SSH brute', status: 'Blocked', score: 7.8 },
  { time: '10:58', ip: '198.51.100.45', country: 'US', type: 'HTTP scan', status: 'Rate limited', score: 5.3 },
  { time: '10:41', ip: '192.0.2.7', country: 'CN', type: 'UDP flood', status: 'Mitigated', score: 6.1 },
  { time: '10:32', ip: '185.11.24.9', country: 'BR', type: 'Credential stuffing', status: 'Quarantined', score: 8.4 },
];

const defaultServers = [
  { name: 'Lobby Cluster', status: 'Healthy', latency: '34ms' },
  { name: 'Matchmaking EU', status: 'Investigating', latency: '58ms' },
  { name: 'Community NA', status: 'Healthy', latency: '41ms' },
];

// Helpers para mapear posibles nombres de campos del backend
function normalizeStats(raw: any): any[] {
  if (!raw) return defaultStats;
  if (Array.isArray(raw)) return raw;

  // Si el backend devuelve { stats: [...] }
  if (Array.isArray(raw.stats)) return raw.stats;

  return defaultStats;
}

function normalizeServers(raw: any): any[] {
  if (!raw) return defaultServers;
  if (Array.isArray(raw)) return raw;

  if (Array.isArray(raw.servers)) return raw.servers;

  return defaultServers;
}

function normalizeAttacks(raw: any): any[] {
  if (!raw) return defaultAttacks;
  if (Array.isArray(raw)) return raw;

  if (Array.isArray(raw.events)) return raw.events;

  return defaultAttacks;
}

// Leer token y proyecto desde cookies (ajusta los nombres si usas otros)
const token = Astro.cookies.get('kyxel_token')?.value;
const projectId = Astro.cookies.get('kyxel_project_id')?.value;

let stats = defaultStats;
let servers = defaultServers;
let attacks = defaultAttacks;
let apiError: string | null = null;

if (token && projectId) {
  try {
    const [overview, events] = await Promise.all([
      apiGetOverview(projectId, token),
      apiGetEvents(projectId, token),
    ]);

    stats = normalizeStats(overview);
    servers = normalizeServers(overview);
    attacks = normalizeAttacks(events);
  } catch (err: any) {
    apiError = err?.message ?? 'Failed to load data from API';
  }
} else {
  apiError = 'Connect your Kyxel project to see live data (using demo data now).';
}
---

<BaseLayout
  title="Dashboard — Kyxel Security"
  description="Preview the Kyxel Security dashboard with live telemetry and incident history."
  showNav={false}
  showFooter={false}
>
  <div class="min-h-screen bg-[#01030b] text-slate-100 flex">
    <aside class="hidden lg:flex w-72 flex-col border-r border-white/5 bg-[#020617] p-6 space-y-8">
      <div>
        <p class="text-xs uppercase tracking-[0.4em] text-cyan-200">Kyxel</p>
        <h1 class="text-2xl font-bold mt-2">Command</h1>
      </div>
      <nav class="space-y-4 text-sm">
        <a class="flex items-center justify-between rounded-2xl bg-white/10 px-4 py-3" href="#overview">
          <span>Overview</span>
          <span class="text-[0.65rem] text-cyan-200">LIVE</span>
        </a>
        <a class="block rounded-2xl px-4 py-3 hover:bg-white/5" href="#servers">Servers</a>
        <a class="block rounded-2xl px-4 py-3 hover:bg-white/5" href="#attacks">Attacks</a>
        <a class="block rounded-2xl px-4 py-3 hover:bg-white/5" href="#playbooks">Playbooks</a>
        <a class="block rounded-2xl px-4 py-3 hover:bg-white/5" href="#settings">Settings</a>
      </nav>
      <div class="mt-auto space-y-3 text-sm text-slate-400">
        <a href={baseUrl} class="inline-flex items-center gap-2 text-cyan-300">← Back to marketing site</a>
        <p>Demo build 1.7.2</p>
      </div>
    </aside>

    <div class="flex-1 flex flex-col min-h-screen">
      <header class="border-b border-white/5 bg-[#020617]/90 backdrop-blur px-6 py-4 flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
          <p class="text-xs uppercase tracking-[0.4em] text-cyan-200">Demo workspace</p>
          <h2 class="text-2xl font-semibold">Overview</h2>
          {apiError && (
            <p class="mt-2 text-xs text-amber-300/90 max-w-xl">
              {apiError}
            </p>
          )}
        </div>
        <div class="flex items-center gap-3">
          <button class="rounded-full border border-white/10 px-4 py-2 text-sm">Upgrade plan</button>
          <div class="flex items-center gap-2 rounded-full border border-white/10 px-4 py-2">
            <span class="h-8 w-8 rounded-full bg-cyan-400/20 flex items-center justify-center text-cyan-200 font-semibold">AR</span>
            <div>
              <p class="text-sm font-semibold">Admin</p>
              <p class="text-xs text-slate-400">Kyxel Studios</p>
            </div>
          </div>
        </div>
      </header>

      <main class="flex-1 overflow-y-auto px-6 py-8 space-y-8">
        <!-- STATS -->
        <section id="overview" class="grid gap-4 md:grid-cols-2 xl:grid-cols-4">
          {stats.map((stat: any) => (
            <div class="card-strong rounded-2xl p-5">
              <p class="text-sm text-slate-400">{stat.label ?? stat.name ?? 'Metric'}</p>
              <p class="text-3xl font-bold text-white mt-2">{stat.value ?? stat.count ?? '—'}</p>
              <p class="text-xs text-green-400 mt-1">
                {stat.change ?? stat.delta ?? ''}
              </p>
            </div>
          ))}
        </section>

        <!-- GRÁFICO + SERVERS -->
        <section class="grid gap-6 xl:grid-cols-3">
          <div class="card-strong rounded-3xl p-6 xl:col-span-2">
            <div class="flex items-center justify-between mb-4">
              <div>
                <p class="text-xs uppercase tracking-[0.4em] text-cyan-200">Traffic</p>
                <h3 class="text-xl font-semibold">Attack volume</h3>
              </div>
              <span class="text-xs text-slate-400">UTC timezone</span>
            </div>
            <div class="chart-row">
              <div class="chart-bar small"></div>
              <div class="chart-bar med"></div>
              <div class="chart-bar large"></div>
              <div class="chart-bar xlarge"></div>
              <div class="chart-bar large"></div>
              <div class="chart-bar med"></div>
              <div class="chart-bar small"></div>
              <div class="chart-bar large"></div>
            </div>
            <div class="flex justify-between text-[0.65rem] text-slate-500 mt-3">
              <span>00:00</span>
              <span>06:00</span>
              <span>12:00</span>
              <span>18:00</span>
              <span>24:00</span>
            </div>
          </div>

          <div id="servers" class="card-strong rounded-3xl p-6 space-y-4">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-xs uppercase tracking-[0.4em] text-cyan-200">Fleet</p>
                <h3 class="text-xl font-semibold">Servers</h3>
              </div>
              <button class="text-xs text-cyan-300">Add</button>
            </div>
            <div class="space-y-3">
              {servers.map((server: any) => (
                <div class="rounded-2xl border border-white/10 p-4 flex items-center justify-between">
                  <div>
                    <p class="font-semibold">
                      {server.name ?? server.id ?? 'Server'}
                    </p>
                    <p class="text-xs text-slate-400">
                      {server.status ?? server.state ?? 'Unknown'}
                    </p>
                  </div>
                  <p class="text-xs text-slate-500">
                    {server.latency ?? server.ping ?? '—'}
                  </p>
                </div>
              ))}
            </div>
          </div>
        </section>

        <!-- ATTACKS TABLE -->
        <section id="attacks" class="card-strong rounded-3xl p-6">
          <div class="flex items-center justify-between mb-4">
            <div>
              <p class="text-xs uppercase tracking-[0.4em] text-cyan-200">Incidents</p>
              <h3 class="text-xl font-semibold">Recent attacks</h3>
            </div>
            <a href={`${baseUrl}docs`} class="text-sm text-cyan-300 underline">Build automations</a>
          </div>
          <div class="overflow-x-auto">
            <table class="w-full text-left text-sm">
              <thead class="text-slate-400 uppercase tracking-[0.3em] text-[0.6rem]">
                <tr>
                  <th class="py-3 pr-4">Time</th>
                  <th class="py-3 pr-4">IP</th>
                  <th class="py-3 pr-4">Country</th>
                  <th class="py-3 pr-4">Type</th>
                  <th class="py-3 pr-4">Status</th>
                  <th class="py-3 text-right">Score</th>
                </tr>
              </thead>
              <tbody class="text-slate-200 divide-y divide-white/10">
                {attacks.map((attack: any) => {
                  const time =
                    attack.time ??
                    attack.timestamp ??
                    attack.createdAt ??
                    '—';
                  const ip =
                    attack.ip ??
                    attack.sourceIp ??
                    attack.source_ip ??
                    '—';
                  const country =
                    attack.country ??
                    attack.countryCode ??
                    attack.country_code ??
                    '—';
                  const type =
                    attack.type ??
                    attack.attackType ??
                    attack.kind ??
                    'Unknown';
                  const status =
                    attack.status ??
                    attack.action ??
                    attack.disposition ??
                    '—';
                  const rawScore =
                    attack.score ??
                    attack.riskScore ??
                    attack.risk_score ??
                    null;

                  const score =
                    typeof rawScore === 'number'
                      ? rawScore.toFixed(1)
                      : rawScore ?? '—';

                  return (
                    <tr>
                      <td class="py-4 pr-4 font-mono text-xs text-slate-500">
                        {time}
                      </td>
                      <td class="py-4 pr-4 font-mono">{ip}</td>
                      <td class="py-4 pr-4 text-slate-300">{country}</td>
                      <td class="py-4 pr-4 text-slate-200">{type}</td>
                      <td class="py-4 pr-4 text-xs text-slate-400">{status}</td>
                      <td class="py-4 text-right text-cyan-300 font-semibold">
                        {score}
                      </td>
                    </tr>
                  );
                })}
              </tbody>
            </table>
          </div>
        </section>

        <!-- PLAYBOOKS (STATIC) -->
        <section id="playbooks" class="card-strong rounded-3xl p-6 space-y-2">
          <p class="text-xs uppercase tracking-[0.4em] text-cyan-200">Runbooks</p>
          <h3 class="text-lg font-semibold">Playbooks (coming soon)</h3>
          <p class="text-sm text-slate-400">
            Define automated responses for repeated attack patterns.
          </p>
        </section>

        <!-- SETTINGS (STATIC) -->
        <section id="settings" class="card-strong rounded-3xl p-6 space-y-2 mb-8">
          <p class="text-xs uppercase tracking-[0.4em] text-cyan-200">Workspace</p>
          <h3 class="text-lg font-semibold">Settings (demo)</h3>
          <p class="text-sm text-slate-400">
            This is a static preview. Connect the Kyxel Agent to unlock full controls.
          </p>
        </section>
      </main>
    </div>
  </div>
</BaseLayout>
